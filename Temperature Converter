function cToF(celsius) {
  // this is celsius to Fahrenheit
 var c = (celsius * 1.8) + 32;
 console.log("60\xB0C is " + c +" \xB0F.");
}

function fToC(fahrenheit) {
  // this is Fahrenheit to Celsius
  var f = ((5/9) * (fahrenheit - 32));
  console.log("45\xB0F is " + f +" \xB0C.");
}

cToF(60);
fToC(45);
